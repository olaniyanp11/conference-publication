<%- include('../partials/header') %>

<div class="min-h-screen bg-gray-100 px-6 py-12">
  <div class="max-w-5xl mx-auto">
    <h2 class="text-2xl font-bold mb-6 text-[#230052]">My Accepted Papers</h2>

    <% if (papers.length === 0) { %>
      <p class="text-gray-500">No accepted papers yet. Keep submitting!</p>
    <% } else { %>
      <ul class="space-y-4">
        <% papers.forEach(paper => { %>
          <li class="bg-white p-4 rounded shadow">
            <h3 class="text-lg font-semibold text-[#230052]"><%= paper.title %></h3>
            <p class="text-sm text-gray-600 mb-1">
              <i class="fas fa-calendar-alt mr-1"></i><%= paper.year %> |
              <i class="fas fa-user mr-1"></i><%= paper.authorName %>
            </p>
            <div class="text-sm mt-2 space-x-4">
              <a href="/view/<%= paper._id %>" class="text-[#e000a1] underline">View</a>
              <a href="<%= paper.fileUrl %>" target="_blank" class="text-blue-600 underline">Open PDF</a>
              <a href="<%= paper.fileUrl %>" download class="text-green-600 underline">Download</a>
            </div>
          </li>
        <% }) %>
      </ul>
    <% } %>
  </div>
</div>

<%- include('../partials/footer') %>
