<%- include('../partials/header') %>

<div class="flex items-center justify-center min-h-screen bg-gray-100 px-4 py-16">
  <div class="w-full max-w-2xl p-8 bg-white shadow-lg rounded-lg">
    <h2 class="text-2xl font-bold text-center mb-6 text-[#230052]">Submit Your Conference Paper</h2>

    <form id="paperForm" action="/user/submit-paper" method="POST" enctype="multipart/form-data" class="space-y-4">
      <!-- Title -->
      <div>
        <label class="block mb-1 font-medium">Paper Title</label>
        <input 
          type="text" 
          name="title" 
          required 
          class="w-full px-4 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-[#230052]" />
      </div>

      <!-- Abstract -->
      <div>
        <label class="block mb-1 font-medium">Abstract</label>
        <textarea 
          name="abstract" 
          rows="4"
          required 
          class="w-full px-4 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-[#230052]"></textarea>
      </div>

      <!-- Author Name -->
      <div>
        <label class="block mb-1 font-medium">Author Name</label>
        <input 
          type="text" 
          name="authorName" 
          required 
          class="w-full px-4 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-[#230052]" />
      </div>

      <!-- Keywords -->
      <div>
        <label class="block mb-1 font-medium">Keywords (comma-separated)</label>
        <input 
          type="text" 
          name="keywords" 
          required 
          class="w-full px-4 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-[#230052]" />
      </div>

      <!-- Year -->
      <div>
        <label class="block mb-1 font-medium">Year of Conference</label>
        <input 
          type="number" 
          name="year" 
          min="1990" 
          max="2100"
          required 
          class="w-full px-4 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-[#230052]" />
      </div>

      <!-- File Upload -->
      <div>
        <label class="block mb-1 font-medium">Upload PDF</label>
        <input 
          type="file" 
          name="pdf" 
          accept="application/pdf"
          required 
          class="w-full px-4 py-2 border rounded bg-white file:mr-4 file:py-2 file:px-4 file:border-0 file:bg-[#230052] file:text-white file:rounded hover:file:bg-[#3c0066]" />
      </div>

      <!-- Submit Button -->
      <button 
        id="submitBtn"
        type="submit" 
        class="w-full bg-gradient-to-r from-[#230052] to-[#e000a1] text-white py-2 rounded hover:from-[#e000a1] hover:to-[#230052] transition">
        Submit Paper
      </button>

      <!-- Loader -->
      <div id="loader" class="hidden flex justify-center mt-4">
        <div class="w-6 h-6 border-4 border-[#230052] border-t-transparent rounded-full animate-spin"></div>
      </div>
    </form>
  </div>
</div>

<script>
  const form = document.getElementById('paperForm');
  const loader = document.getElementById('loader');
  const submitBtn = document.getElementById('submitBtn');

  form.addEventListener('submit', () => {
    loader.classList.remove('hidden');
    submitBtn.disabled = true;
    submitBtn.textContent = 'Submitting...';
  });
</script>

<%- include('../partials/footer') %>
