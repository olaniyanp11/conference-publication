
<div class="min-h-screen bg-gray-100 px-6 py-12">
  <div class="max-w-5xl mx-auto">
    <h2 class="text-2xl font-bold mb-6 text-[#230052]">Welcome, <%= user.name %> ðŸ‘‹</h2>

    <!-- Stats Section -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6 mb-10">
      <div class="bg-white rounded-lg shadow p-4">
        <h4 class="text-sm text-gray-600">Total Submissions</h4>
        <p class="text-2xl font-bold text-[#230052]"><%= total %></p>
      </div>
      <div class="bg-white rounded-lg shadow p-4">
        <h4 class="text-sm text-gray-600">Approved</h4>
        <p class="text-2xl font-bold text-green-600"><%= approved %></p>
      </div>
      <div class="bg-white rounded-lg shadow p-4">
        <h4 class="text-sm text-gray-600">Pending</h4>
        <p class="text-2xl font-bold text-yellow-600"><%= pending %></p>
      </div>
      <div class="bg-white rounded-lg shadow p-4">
        <h4 class="text-sm text-gray-600">Rejected</h4>
        <p class="text-2xl font-bold text-red-500"><%= rejected %></p>
      </div>
    </div>

    <!-- Recent Submissions -->
    <div class="bg-white rounded-lg shadow p-6">
      <div class="flex justify-between items-center mb-4">
        <h3 class="text-xl font-bold text-[#230052]">Recent Submissions</h3>
        <a href="/user/submit-paper" class="text-[#e000a1] hover:underline">+ Submit New Paper</a>
      </div>

      <% if (papers.length === 0) { %>
        <p class="text-gray-500">You havenâ€™t submitted any papers yet.</p>
      <% } else { %>
        <ul class="space-y-4">
          <% papers.forEach(paper => { %>
            <li class="border-b pb-3">
              <h4 class="font-semibold"><%= paper.title %></h4>
              <p class="text-sm text-gray-600">
                <%= paper.year %> | 
                Status: 
                <% if (paper.status === 'approved') { %>
                  <span class="text-green-600">Approved</span>
                <% } else if (paper.status === 'pending') { %>
                  <span class="text-yellow-600">Pending</span>
                <% } else { %>
                  <span class="text-red-600">Rejected</span>
                <% } %>
              </p>
              <a href="/view/<%= paper._id %>" class="text-sm text-[#e000a1] hover:underline">View</a>
            </li>
          <% }) %>
        </ul>
      <% } %>
    </div>
  </div>
</div>

<%- include('../partials/footer') %>