<%- include('../partials/header') %>
<style>
  .collapsed .sidebar-label {
    display: none;
  }
  .collapsed {
    width: 4rem !important;
  }
</style>

<div class="flex min-h-screen bg-gray-100">

  <!-- Sidebar -->
  <aside id="sidebar" class="w-64 bg-[#230052] text-white flex flex-col transition-all duration-300">
    <!-- Top -->
    <div class="flex items-center justify-between px-6 py-4 border-b border-[#3d006a]">
      <h2 class="text-xl font-bold sidebar-label">
        <i class="fas fa-user mr-2"></i><%= user.name %>
      </h2>
      <button id="collapseBtn" class="text-white">
        <i class="fas fa-chevron-left"></i>
      </button>
    </div>

    <!-- Navigation -->
    <nav class="flex flex-col p-6 space-y-6">
      <a href="/user/dashboard" class="hover:text-[#e000a1] flex items-center">
        <i class="fas fa-home mr-2"></i>
        <span class="sidebar-label">Dashboard</span>
      </a>
      <a href="/user/submit-paper" class="hover:text-[#e000a1] flex items-center">
        <i class="fas fa-upload mr-2"></i>
        <span class="sidebar-label">Submit Paper</span>
      </a>
      <a href="/user/my-submissions" class="hover:text-[#e000a1] flex items-center">
        <i class="fas fa-file-alt mr-2"></i>
        <span class="sidebar-label">My Submissions</span>
      </a>
      <a href="/logout" class="hover:text-red-400 flex items-center">
        <i class="fas fa-sign-out-alt mr-2"></i>
        <span class="sidebar-label">Logout</span>
      </a>
    </nav>
  </aside>

  <!-- Main Content -->
  <main class="flex-1 p-8">
<%- include('./sidebar') %>
  </main>
</div>

<script>
  const sidebar = document.getElementById('sidebar');
  const btn = document.getElementById('collapseBtn');

  btn.addEventListener('click', () => {
    sidebar.classList.toggle('collapsed');
    btn.querySelector('i').classList.toggle('fa-chevron-left');
    btn.querySelector('i').classList.toggle('fa-chevron-right');
  });
</script>

