<%- include('../partials/header') %>

<div class="min-h-screen bg-gray-100 px-6 py-12">
  <div class="max-w-4xl mx-auto bg-white p-6 rounded-lg shadow-lg">
    <h2 class="text-2xl font-bold text-[#230052] mb-6">My Submitted Papers</h2>

    <% if (papers.length === 0) { %>
      <p class="text-gray-500">You havenâ€™t submitted any papers yet.</p>
    <% } else { %>
      <div class="space-y-4">
        <% papers.forEach(paper => { %>
          <div class="p-4 border border-gray-200 rounded shadow-sm bg-gray-50">
            <h3 class="font-semibold text-lg text-[#230052]"><%= paper.title %></h3>
            <p class="text-sm text-gray-600 mb-1">Author: <%= paper.authorName %> | Year: <%= paper.year %></p>
            <p class="text-sm text-gray-600 mb-2">Keywords: <%= paper.keywords.join(', ') %></p>
            <p class="text-sm">
              Status: 
              <% if (paper.status === 'pending') { %>
                <span class="text-yellow-500 font-semibold">Pending</span>
              <% } else if (paper.status === 'approved') { %>
                <span class="text-green-600 font-semibold">Approved</span>
              <% } else { %>
                <span class="text-red-500 font-semibold">Rejected</span>
              <% } %>
            </p>
            <a 
              href="/user/view/<%= paper._id %>" 
              target="_blank" 
              class="inline-block mt-3 text-sm text-[#e000a1] underline hover:text-[#230052]">
              View PDF
            </a>
          </div>
        <% }) %>
      </div>
    <% } %>
  </div>
</div>

<%- include('../partials/footer') %>
